# Strapi Configuration
# Development mode: Calls Strapi directly (automatic)
# Production mode: Uses /api routes with caching (automatic)
VITE_STRAPI_URL=http://localhost:1337

# Shopify Configuration
VITE_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
VITE_SHOPIFY_STOREFRONT_TOKEN=your-storefront-access-token
VITE_SHOPIFY_API_VERSION=2025-07

# Server-side Environment Variables (for Vercel API routes)
# ⚠️ These should ONLY be set in Vercel dashboard under Environment Variables
# DO NOT commit these values to git!

# Strapi backend URL (same as above, but for server-side API calls)
STRAPI_URL=https://your-strapi-instance.strapiapp.com

# Strapi API token (create in Strapi admin: Settings → API Tokens)
STRAPI_TOKEN=your_strapi_api_token_here

# Secret for webhook revalidation (generate a random string)
REVALIDATE_SECRET=your_secure_random_string_here

# Optional: Vercel API token for cache purging (create at vercel.com/account/tokens)
VERCEL_TOKEN=your_vercel_token_here

# Optional: Vercel team ID (find in team settings)
VERCEL_TEAM_ID=your_vercel_team_id_here
